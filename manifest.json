{
  "manifest_version": 3,
  "name": "OmniContext",
  "version": "1.0.0",
  "description": "跨平台AI对话上下文管理工具 - 在不同AI助手间共享记忆",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.doubao.com/*",
    "https://yuanbao.tencent.com/*",
    "https://claude.ai/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.doubao.com/*",
        "https://yuanbao.tencent.com/*",
        "https://claude.ai/*"
      ],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}
